        ],
        "answer": 2
    }
]

def run_quiz():
    score = 0
    random.shuffle(questions)
    for i, q in enumerate(questions, 1):
        print(f"\nPregunta {i}: {q['question']}")
        for idx, option in enumerate(q["options"]):
            print(f"  {idx + 1}. {option}")
        try:
            user_input = int(input("Tu respuesta (1-4): ")) - 1
            if user_input == q["answer"]:
                print("✅ ¡Correcto!")
                score += 1
            else:
                print(f"❌ Incorrecto. La respuesta correcta es: {q['options'][q['answer']]}")
        except ValueError:
            print("⚠️ Entrada inválida. Debes ingresar un número del 1 al 4.")
    print(f"\nTu puntuación final: {score} de {len(questions)}")

if __name__ == "__main__":
    run_quiz()
